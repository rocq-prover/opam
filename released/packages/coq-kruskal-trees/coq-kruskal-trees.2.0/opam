bug-reports: "https://github.com/DmxLarchey/Kruskal-Trees/issues"
dev-repo: "git+https://github.com:DmxLarchey/Kruskal-Trees/"

build: [
  [ make "-j%{jobs}%"]
]
install: [
  [make "install"]
]

depends: [
  "rocq-core" {>= "9.0.0" & < "9.2~"}
  "rocq-stdlib" {}
]

