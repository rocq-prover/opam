]
license: "LGPL-3.0-or-later"

depends: [
  ("coq" {>= "8.20" & < "8.21~"} |
    ("rocq-core" {>= "9.0" & < "9.2~"} & "rocq-stdlib"))
  "coq-coquelicot" {>= "3.4" & < "3.5~"}
  "rocq-num-analysis-subset" {= version}
]

build: [ make "-C" "Algebra" "-j%{jobs}%" ]
install: [ make "-C" "Algebra" "install" ]
remove: [ make "-C" "Algebra" "uninstall" ]

